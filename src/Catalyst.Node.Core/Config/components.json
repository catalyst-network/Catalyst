{
  "defaultAssembly": "Catalyst.Node.Core",
  "components": [
    {
      "type": "Catalyst.Node.Core.Components.Redis.RedisStore",
      "services": [
        {
          "type": "Catalyst.Node.Common.IKeyValueStore, Catalyst.Node.Common"
        }
      ]
    },
    {
      "type": "Catalyst.Node.Core.CatalystNode",
      "services": {
        "type": "Catalyst.Node.Common.ICatalyst, Catalyst.Node.Common"
      }
    },
    {
      "type": "Catalyst.Node.Core.Helpers.Cryptography.CertificateStore",
      "services": {
        "type": "Catalyst.Node.Core.Helpers.Cryptography.ICertificateStore, Catalyst.Node.Common"
      }
    }
  ],
  //simply comment modules that you don't need.
  "modules": [
    {
      "type": "Catalyst.Node.Core.Modules.JsonConfiguredModule",
      "parameters": {
        "configFilePath": "Config/Modules/gossip.json"
      }
    },
    {
      "type": "Catalyst.Node.Core.Modules.JsonConfiguredModule",
      "parameters": {
        "configFilePath": "Config/Modules/dfs.json"
      }
    },
    {
      "type": "Catalyst.Node.Core.Modules.JsonConfiguredModule",
      "parameters": {
        "configFilePath": "Config/Modules/consensus.json"
      }
    },
    {
      "type": "Catalyst.Node.Core.Modules.JsonConfiguredModule",
      "parameters": {
        "configFilePath": "Config/Modules/contract.json"
      }
    },
    {
      "type": "Catalyst.Node.Core.Modules.JsonConfiguredModule",
      "parameters": {
        "configFilePath": "Config/Modules/ledger.json"
      }
    },
    {
      "type": "Catalyst.Node.Core.Modules.JsonConfiguredModule",
      "parameters": {
        "configFilePath": "Config/Modules/mempool.json"
      }
    }
  ] 
}
