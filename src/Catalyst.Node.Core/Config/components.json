{
    "defaultAssembly": "Catalyst.Node.Core",
    "components": [
        {
            "type": "Catalyst.Node.Core.CatalystNode",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.ICatalystNode, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Node.Core.P2P.PeerClient",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.P2P.IPeerClient, Catalyst.Common"
                }
            ],
            "instanceScope": "singleinstance"
        },
        {
            "type": "Catalyst.Common.IO.Messaging.MessageFactory, Catalyst.Common",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.IO.Messaging.IMessageFactory, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Common.IO.Inbound.TcpServerChannelFactory, Catalyst.Common",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.IO.Inbound.ITcpServerChannelFactory, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Common.IO.Outbound.TcpClientChannelFactory, Catalyst.Common",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.IO.Outbound.ITcpClientChannelFactory, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Common.IO.Outbound.UdpClientChannelFactory, Catalyst.Common",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.IO.Outbound.IUdpClientChannelFactory, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Common.IO.Inbound.UdpServerChannelFactory, Catalyst.Common",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.IO.Inbound.IUdpServerChannelFactory, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Node.Core.RPC.NodeRpcServer",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.Rpc.INodeRpcServer, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Common.IO.Inbound.Handlers.ObservableServiceHandler, Catalyst.Common",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.IO.Inbound.Handlers.IObservableServiceHandler, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Node.Core.RPC.RpcServerSettings",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.Rpc.IRpcServerSettings, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Common.IO.Messaging.MessageCorrelationManager, Catalyst.Common",
            "services": [
                {
                    "type": "Catalyst.Common.Interfaces.IO.Messaging.IMessageCorrelationManager, Catalyst.Common"
                }
            ]
        },
        {
            "type": "Catalyst.Node.Core.P2P.PeerSettings",
