<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <Title>Catalyst CLI</Title>
        <Authors>James Kirby (nshcore@protonmail.com)</Authors>
        <PackageDescription>CLI tool to interact with Catalyst Nodes via RPC</PackageDescription>
        <AssemblyCopyrightAttribute>Copyright © 2019 AtlasCity.io</AssemblyCopyrightAttribute>
        <OutputType>Exe</OutputType>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>Catalyst.Node.POA.CE.snk</AssemblyOriginatorKeyFile>
        <PublicSign>true</PublicSign>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RootNamespace>Catalyst.Node.POA.CE</RootNamespace>
    </PropertyGroup>
    <Import Project="../Common.Projects.props" />
    <ItemGroup>
      <None Remove="Config\nodes.json" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Autofac" Version="4.8.1" />
        <PackageReference Include="Autofac.Configuration" Version="4.1.0" />
        <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="4.3.1" />
        <PackageReference Include="AutofacSerilogIntegration" Version="2.0.0" />
        <PackageReference Include="Common.Logging.Serilog" Version="4.3.6" />
        <PackageReference Include="DnsClient" Version="1.2.0" />
        <PackageReference Include="DotNetty.Codecs" Version="0.6.0" />
        <PackageReference Include="DotNetty.Codecs.Protobuf" Version="0.6.0" />
        <PackageReference Include="DotNetty.Common" Version="0.6.0" />
        <PackageReference Include="DotNetty.Handlers" Version="0.6.0" />
        <PackageReference Include="Ipfs.Core" Version="0.53.1" />
        <PackageReference Include="Ipfs.Engine" Version="0.12.0" />
        <PackageReference Include="Ipfs.HttpGateway" Version="0.4.0" />
        <PackageReference Include="CommandLineParser" Version="2.5.0" />
        <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
        <PackageReference Include="Nethereum.RLP" Version="3.3.0" />
        <PackageReference Include="Nito.Comparers" Version="6.0.0" />
        <PackageReference Include="Serilog" Version="2.8.0" />
        <PackageReference Include="Serilog.Extensions.Logging" Version="2.0.4" />
        <PackageReference Include="Serilog.Enrichers.Environment" Version="2.1.3" />
        <PackageReference Include="Serilog.Enrichers.Thread" Version="3.1.0" />
        <PackageReference Include="Serilog.Settings.Configuration" Version="3.1.0" />
        <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
        <PackageReference Include="Serilog.Sinks.File" Version="4.0.0" />
        <PackageReference Include="Dawn.Guard" Version="1.8.0" />
        <PackageReference Include="SharpRepository.InMemoryRepository" Version="2.0.3.1" />
        <PackageReference Include="SharpRepository.Ioc.Autofac" Version="2.0.4.2" />
        <PackageReference Include="SharpRepository.Repository" Version="2.0.4.6" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\Catalyst.Core\Catalyst.Core.csproj" />
    </ItemGroup>
    <ItemGroup>
        <None Update="Config\**\*.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Config\*.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Config.*.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
      <None Update="Config\AuthCredentials.xml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Consensus" />
    </ItemGroup>
</Project>
