<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Title>Catalyst Node</Title>
        <Authors>James Kirkby (james.kirby@atlascity.io)</Authors>
        <PackageDescription>Catalyst Node</PackageDescription>
        <Copyright>MIT</Copyright>
        <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
        <PackageLicenseUrl>http://github.com/atlascity/catalyst-Node/LICENSE.md</PackageLicenseUrl>
        <PackageProjectUrl>http://github.com/atlascity/catalyst-Node/</PackageProjectUrl>
        <RepositoryUrl>http://github.com/atlascity/catalyst-Node/</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <AssemblyCompanyAttribute>AtlasCity.io</AssemblyCompanyAttribute>
        <AssemblyCopyrightAttribute>Copyright © 2019 AtlasCity.io</AssemblyCopyrightAttribute>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp2.1</TargetFramework>
        <PackageId>Catalyst.Node</PackageId>
        <Deterministic>true</Deterministic>
        <Optimize>true</Optimize>
        <PlatformTarget>AnyCPU</PlatformTarget>
        <RuntimeFrameworkVersion>2.1.1</RuntimeFrameworkVersion>
        <LangVersion>7.2</LangVersion>
        <TargetLatestRuntimePatch>true</TargetLatestRuntimePatch>
        <GenerateAssemblyAuthorAttribute>true</GenerateAssemblyAuthorAttribute>
        <GenerateAssemblyConfigurationAttribute>true</GenerateAssemblyConfigurationAttribute>
        <GenerateAssemblyCompanyAttribute>true</GenerateAssemblyCompanyAttribute>
        <GenerateAssemblyProductAttribute>true</GenerateAssemblyProductAttribute>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Autofac" Version="4.8.1" />
        <PackageReference Include="Autofac.Configuration" Version="4.1.0" />
        <PackageReference Include="BouncyCastle.NetCore" Version="1.8.3" />
        <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.2.5" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.1.1" />
        <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="2.1.1" />
        <PackageReference Include="Serilog" Version="2.7.1" />
        <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
        <PackageReference Include="Serilog.Sinks.File" Version="4.0.1-dev-00801" />
        <PackageReference Include="Dawn.Guard" Version="1.7.0" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\Catalyst.Helpers.Ipfs\Catalyst.Helpers.Ipfs.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.KeyValueStore\Catalyst.Helpers.KeyValueStore.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.Logger\Catalyst.Helpers.Logger.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.Network\Catalyst.Helpers.Network.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.Platform\Catalyst.Helpers.Platform.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.Redis\Catalyst.Helpers.Redis.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.RLP\Catalyst.Helpers.RLP.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.Shell\Catalyst.Helpers.Shell.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.Consensus\Catalyst.Node.Modules.Core.Consensus.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.Contract\Catalyst.Node.Modules.Core.Contract.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.Dfs\Catalyst.Node.Modules.Core.Dfs.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.Gossip\Catalyst.Node.Modules.Core.Gossip.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.Ledger\Catalyst.Node.Modules.Core.Ledger.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.Mempool\Catalyst.Node.Modules.Core.Mempool.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.P2P\Catalyst.Node.Modules.Core.P2P.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core.Transactions\Catalyst.Node.Modules.Core.Transactions.csproj" />
        <ProjectReference Include="..\Catalyst.Node.Modules.Core\Catalyst.Node.Modules.Core.csproj" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\Sdk\Catalyst.Protocol.Mempool\csharp\Catalyst.Protocol.Mempool.csproj" />
        <ProjectReference Include="..\..\Sdk\Catalyst.Protocol.P2P\csharp\Catalyst.Protocol.P2P.csproj" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\Catalyst.Helpers.Exceptions\Catalyst.Helpers.Exceptions.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.FileSystem\Catalyst.Helpers.FileSystem.csproj" />
        <ProjectReference Include="..\Catalyst.Helpers.Cryptography\Catalyst.Helpers.Cryptography.csproj" />
    </ItemGroup>
    <ItemGroup>
        <Content Include=".\Config\components.json;.\Config\devnet.json;.\Config\testnet.json;.\Config\mainnet.json;">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <Content Include="Config\components.json" />
    </ItemGroup>
    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DebugType>none</DebugType>
        <DebugSymbols>False</DebugSymbols>
    </PropertyGroup>
    <ItemGroup>
        <Compile Remove="UnitTests\**" />
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Remove="UnitTests\**" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="UnitTests\**" />
    </ItemGroup>
    <PropertyGroup>
        <DefaultItemExcludes>./UnitTests</DefaultItemExcludes>
    </PropertyGroup>
    <ItemGroup>
      <_UnmanagedRegistrationCache Remove="obj\Catalyst.Node.csproj.UnmanagedRegistration.cache" />
    </ItemGroup>
    <ItemGroup>
      <_ResolveComReferenceCache Remove="obj\Debug\netcoreapp2.1\Catalyst.Node.csproj.ResolveComReference.cache" />
    </ItemGroup>
    <ItemGroup>
      <IntermediateAssembly Remove="obj\Debug\netcoreapp2.1\Catalyst.Node.dll" />
    </ItemGroup>
    <ItemGroup>
      <_DebugSymbolsIntermediatePath Remove="obj\Debug\netcoreapp2.1\Catalyst.Node.pdb" />
    </ItemGroup>
    <ItemGroup>
      <_DeploymentManifestEntryPoint Remove="obj\Debug\netcoreapp2.1\Catalyst.Node.dll" />
    </ItemGroup>
    <ItemGroup>
      <ApplicationManifest Remove="obj\Debug\netcoreapp2.1\Catalyst.Node.dll.manifest" />
    </ItemGroup>
    <ItemGroup>
      <DeployManifest Remove="obj\Debug\netcoreapp2.1\Catalyst.Node.application" />
    </ItemGroup>
    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <ItemGroup>
            <PluginAssembly Include="$(SolutionDir)\Catalyst.Node.Modules.Core.Mempool\bin\$(ConfigurationName)\**\Catalyst.Node.Modules.Core.Mempool.dll" />
        </ItemGroup>
        <Copy SourceFiles="@(PluginAssembly)" DestinationFolder="$(OutDir)" />
    </Target>
</Project>
