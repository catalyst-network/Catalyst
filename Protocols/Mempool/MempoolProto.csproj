<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.1</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Google.Protobuf" Version="3.6.1" />
    </ItemGroup>

    <ItemGroup>
        <Proto Include="*.proto" />
        <Generated Include=".\Service\*.cs" />
    </ItemGroup>
    
    <ItemGroup>
        <_UnmanagedRegistrationCache Remove="obj\MempoolProto.csproj.UnmanagedRegistration.cache" />
    </ItemGroup>

    <ItemGroup>
        <_ResolveComReferenceCache Remove="obj\Debug\netcoreapp2.1\MempoolProto.csproj.ResolveComReference.cache" />
    </ItemGroup>

    <ItemGroup>
        <IntermediateAssembly Remove="obj\Debug\netcoreapp2.1\MempoolProto.dll" />
    </ItemGroup>

    <ItemGroup>
        <_DebugSymbolsIntermediatePath Remove="obj\Debug\netcoreapp2.1\MempoolProto.pdb" />
    </ItemGroup>

    <ItemGroup>
        <_DeploymentManifestEntryPoint Remove="obj\Debug\netcoreapp2.1\MempoolProto.dll" />
    </ItemGroup>

    <ItemGroup>
        <ApplicationManifest Remove="obj\Debug\netcoreapp2.1\Native.MempoolProto.manifest" />
    </ItemGroup>

    <ItemGroup>
        <DeployManifest Remove="obj\Debug\netcoreapp2.1\MempoolProto.application" />
    </ItemGroup>

    <!-- Generate the code from all of the proto files -->
    <Target Name="GenProtos" BeforeTargets="BeforeBuild" Inputs="@(Proto)" Outputs="@(Service)">
        <Message Text="Generating protos @(Proto)" Importance="High" />
        <!-- TODO: Run different command lines per OS. -->
        <Exec Command="$(ProjectDir)/../../Tools/gen_protos.sh" />
        <!-- Ensure all of the generated files are compiled. -->
        <ItemGroup Condition="'@(Compile)' == ''">
            <Compile Include="Service\*.cs" />
        </ItemGroup>
    </Target>
</Project>
